<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".explorar"
    android:background="@drawable/pranchet11">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="0dp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="34dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/button1"
                android:layout_width="60dp"
                android:layout_height="35dp"
                android:background="@null"
                android:text="menu"
                android:layout_weight="0.2"
                android:textColor="@color/corbranca"
                android:textSize="10dp" />

            <Button
                android:id="@+id/button3"
                android:layout_width="17dp"
                android:layout_height="35dp"
                android:layout_weight="0.2"
                android:background="@null"
                android:text="salvador"
                android:textColor="@color/corbranca"
                android:textSize="10dp" />

            <Button
                android:id="@+id/button4"
                android:layout_width="17dp"
                android:layout_height="35dp"
                android:layout_weight="0.2"
                android:background="@null"
                android:text="Pt-br"
                android:textColor="@color/corbranca"
                android:textSize="10dp" />

            <ImageButton
                android:id="@+id/imageButton4"
                android:layout_width="7dp"
                android:layout_height="35dp"
                android:layout_weight="0.15"
                android:background="@null"
                android:scaleType="centerInside"
                app:srcCompat="@drawable/icone29" />

            <ImageButton
                android:id="@+id/imageButton5"
                android:layout_width="7dp"
                android:layout_height="35dp"
                android:layout_weight="0.2"
                android:background="@null"
                android:scaleType="centerInside"

                app:srcCompat="@drawable/icone30" />

            <ImageButton
                android:id="@+id/imageButton6"
                android:layout_width="7dp"
                android:layout_height="35dp"
                android:layout_weight="0.2"
                android:background="@null"
                android:scaleType="centerInside"
                app:srcCompat="@drawable/icone31" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="33dp"
                android:gravity="center"
                android:layout_marginTop="25dp"
                android:text="Explorar"
                android:textColor="@color/corbranca"
                android:textSize="24dp" />
        </LinearLayout>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="500dp"
            android:layout_marginTop="43dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:layout_width="109dp"
                    android:layout_height="33dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:text="Local:"
                    android:textColor="@color/black"
                    android:textSize="24dp" />

                <RadioButton
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="26dp"
                    android:layout_marginTop="16dp"
                    android:background="@null"
                    android:text="Escolher uma cidade"
                    android:textAllCaps="true"
                    android:textSize="14dp" />

                <RadioButton
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="26dp"
                    android:layout_marginTop="16dp"
                    android:background="@null"
                    android:text="Todas as cidades"
                    android:textAllCaps="true"
                    android:textSize="14dp" />

                <RadioButton
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="200dp"
                    android:layout_marginTop="-116dp"
                    android:background="@null"
                    android:text="Usar minha localização"
                    android:textAllCaps="true"
                    android:textSize="14dp" />

                <TextView
                    android:layout_width="109dp"
                    android:layout_height="33dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="80dp"
                    android:text="Quando?"
                    android:textColor="@color/black"
                    android:textSize="24dp" />

                <RadioButton
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="26dp"
                    android:layout_marginTop="16dp"
                    android:background="@null"
                    android:text="A partir de HOJE"
                    android:textAllCaps="true"
                    android:textSize="14dp" />

                <RadioButton
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="26dp"
                    android:layout_marginTop="16dp"
                    android:background="@null"
                    android:text="essa semana"
                    android:textAllCaps="true"
                    android:textSize="14dp" />

                <RadioButton
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="200dp"
                    android:layout_marginTop="-116dp"
                    android:background="@null"
                    android:text="Hoje"
                    android:textAllCaps="true"
                    android:textSize="14dp" />

                <RadioButton
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="200dp"
                    android:layout_marginTop="15dp"
                    android:background="@null"
                    android:text="Este mês"
                    android:textAllCaps="true"
                    android:textSize="14dp" />

                <TextView
                    android:layout_width="109dp"
                    android:layout_height="33dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="16dp"
                    android:text="Categoria"
                    android:textColor="@color/black"
                    android:textSize="24dp" />

                <RadioButton
                    android:layout_width="50dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="26dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/icone16" />

                <RadioButton
                    android:layout_width="50dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="96dp"
                    android:layout_marginTop="-40dp"
                    android:background="@drawable/icone17" />

                <RadioButton
                    android:layout_width="50dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="166dp"
                    android:layout_marginTop="-40dp"
                    android:background="@drawable/icone10" />

                <RadioButton
                    android:layout_width="50dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="236dp"
                    android:layout_marginTop="-40dp"
                    android:background="@drawable/icone11" />

                <RadioButton
                    android:layout_width="50dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="306dp"
                    android:layout_marginTop="-40dp"
                    android:background="@drawable/icone12" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="26dp"
                    android:text="Todos" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="100dp"
                    android:layout_marginTop="-20dp"
                    android:text="Show" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="170dp"
                    android:layout_marginTop="-20dp"
                    android:text="Esporte" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="245dp"
                    android:layout_marginTop="-20dp"
                    android:text="Arte" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="310dp"
                    android:layout_marginTop="-20dp"
                    android:text="Games" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginStart="26dp"
                    android:layout_marginTop="16dp"
                    android:text="Valor"
                    android:textColor="@color/black"
                    android:textSize="24dp" />

                <RadioButton
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="26dp"
                    android:layout_marginTop="16dp"
                    android:background="@null"
                    android:text="todos"
                    android:textAllCaps="true"
                    android:textSize="14dp" />

                <RadioButton
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="26dp"
                    android:layout_marginTop="16dp"
                    android:background="@null"
                    android:text="grátis"
                    android:textAllCaps="true"
                    android:textSize="14dp" />

                <RadioButton
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:layout_marginStart="200dp"
                    android:layout_marginTop="-116dp"
                    android:background="@null"
                    android:text="PAGO"
                    android:textSize="14dp"
                    android:id="@+id/btnexplorar"/>

            </LinearLayout>
        </ScrollView>
        <Button
            android:layout_width="250dp"
            android:layout_height="70dp"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            android:background="@color/Verdelongin"
            android:text="Explorar"
            android:textColor="@color/corbranca" />
    </LinearLayout>
</LinearLayout>